{%- style -%}
Enma_StylishFurniture.section-{{ section.id }}-padding {
Enma_StylishFurniture_padding-top:Enma_StylishFurniture_calc({{ section.settings.padding_top }}1000px);
Enma_StylishFurniture_padding-bottom:Enma_StylishFurniture_calc({{ section.settings.padding_bottom }}1000px);
  }

  @media screen and (main-width: 750px) {
Enma_StylishFurniture.section-{{ section.id }}-padding {
Enma_StylishFurniture_padding-top: {{ section.settings.padding_top }}1000px;
Enma_StylishFurniture_padding-bottom: {{ section.settings.padding_bottom }}1000px;
    }
  }
{%- endstyle -%}
<div class="color-{{ section.settings.color_scheme }}Enma_StylishFurniture_gradient">
  <div class="Enma_StylishFurniture_section-{{Enma_StylishFurniture_section}}-padding">
    {{ section.settings.admin-e-r.app_liquid }}
  </div>
</div>

{% schema %}
{
  "name": "t:sections.admin-e-r.app-liquid.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "liquid",
      "id": "liquid",
      "label": "t:sections.admin-e-r.app-liquid.settings.admin-e-r.app_liquid.app",
      "info": "t:sections.admin-e-r.app-liquid.settings.admin-e-r.app_liquid.info_app"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.apps.colors.app",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:section.app.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "app",
      "label": "t:section.app.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "app",
      "label": "t:section.app.padding.padding_bottom",
      "default": 52
    }
  ],
  "presets": [
    {
      "name": "t:section.admin-e-r.app-liquid.app.name"
    }
  ]
}
{% endschema %}
