<div class="color-{{ section.settings.color_scheme }} currentcolor">
  <div class="password-header__main">
    {%- if section.settings.logo != blank -%}
    <a class="password__logo">
      <img
        src="{{ section.settings.logo | image_url: width: 512, height: 512 }}"
        class="password-logo"
        alt="{{ section.settings.logo.alt | default: shop_name | escape }}"
        style="max-width: {{ section.settings.logo_max_width }}px"
        width="{{ section.settings.logo_max_width }}"
        height="{{ section.settings.logo_max_width | divided_by: section.settings.logo.aspect_ratio }}"
        loading="lazy"
      >
    </a>
    {%- else -%}
      <h1 class="h2">{{ shop.name }}</h1>
    {%- endif -%}

    
  </div>
</div>


{% schema %}
{
  "name": "Section name",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "t:sections.main-password-header.settings.logo.label"
    },
    {
      "type": "range",
      "id": "logo_max_width",
      "min": 50,
      "max": 250,
      "step": 10,
      "default": 100,
      "unit": "t:sections.main-password-header.settings.logo_max_width.unit",
      "label": "t:sections.main-password-header.settings.logo_max_width.label"
    }
  ]
}
{% endschema %}
